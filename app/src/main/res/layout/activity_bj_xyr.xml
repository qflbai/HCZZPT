<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".platforms.ui.activity.AddXyrActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dp_15"
        app:layout_constraintBottom_toTopOf="@id/tv_submit"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/_F2F2F2"
                android:padding="@dimen/dp_15"
                android:text="添加嫌疑人信息"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18"
                app:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:id="@+id/rl_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/tv_title">

                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="嫌疑人ID："
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_xyr_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/tv_1"
                    android:text=""

                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:id="@+id/iv_tx"
                    android:layout_width="@dimen/dp_64"
                    android:layout_height="@dimen/dp_64"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_18"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginBottom="@dimen/dp_18"
                    android:clickable="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_lan_jia_hao" />
            </RelativeLayout>

            <View
                android:id="@+id/v_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/_f2f2f2"
                app:layout_constraintTop_toBottomOf="@id/rl_1" />

            <RelativeLayout
                android:id="@+id/rl_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/v_1">

                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="姓名"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/et_xyr_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_toRightOf="@id/tv_2"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请输入嫌疑人姓名"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_15"
                    android:textColor="@color/_6E6E6E"
                    android:textSize="@dimen/sp_14" />
            </RelativeLayout>

            <View
                android:id="@+id/v_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/_f2f2f2"
                app:layout_constraintTop_toBottomOf="@id/rl_2" />

            <RelativeLayout
                android:id="@+id/rl_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/v_2">

                <TextView
                    android:id="@+id/tv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="网络号"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/et_wxh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_toRightOf="@id/tv_3"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请输入嫌疑人网络号"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_15"
                    android:textColor="@color/_6E6E6E"
                    android:textSize="@dimen/sp_14" />
            </RelativeLayout>

            <View
                android:id="@+id/v_3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/_f2f2f2"
                app:layout_constraintTop_toBottomOf="@id/rl_3" />

            <RelativeLayout
                android:id="@+id/rl_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/v_3">

                <TextView
                    android:id="@+id/tv_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="身份证号"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/et_sfzh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_toRightOf="@id/tv_4"
                    android:background="@null"
                    android:gravity="right"
                    android:maxLength="18"
                    android:singleLine="true"
                    android:digits="1234567890Xx"
                    android:hint="请输入嫌疑人身份证号"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_15"
                    android:textColor="@color/_6E6E6E"
                    android:textSize="@dimen/sp_14" />
            </RelativeLayout>

            <View
                android:id="@+id/v_4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/_f2f2f2"
                app:layout_constraintTop_toBottomOf="@id/rl_4" />

            <RelativeLayout
                android:id="@+id/rl_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/v_4">

                <TextView
                    android:id="@+id/tv_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="车牌号码"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/et_cphm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_toRightOf="@id/tv_5"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请输入嫌疑人车牌号码"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_15"
                    android:textColor="@color/_6E6E6E"
                    android:textSize="@dimen/sp_14" />
            </RelativeLayout>

            <View
                android:id="@+id/v_5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/_f2f2f2"
                app:layout_constraintTop_toBottomOf="@id/rl_5" />

            <RelativeLayout
                android:id="@+id/rl_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/v_5">

                <TextView
                    android:id="@+id/tv_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="手机号码"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/et_sjhm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_toRightOf="@id/tv_6"
                    android:background="@null"
                    android:gravity="right"
                    android:inputType="number"
                    android:maxLength="11"
                    android:singleLine="true"
                    android:hint="请输入嫌疑人手机号码"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_15"
                    android:textColor="@color/_6E6E6E"
                    android:textSize="@dimen/sp_14" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/_F2F2F2"
                android:padding="@dimen/dp_15"
                android:text="补充抓捕记录(选填)"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_18"
                app:layout_constraintTop_toBottomOf="@id/rl_6" />

            <RelativeLayout
                android:id="@+id/rl_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/tv_7">

                <TextView
                    android:id="@+id/tv_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="抓捕名称"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14" />

                <EditText
                    android:id="@+id/et_zpmc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_toRightOf="@id/tv_8"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请输入抓捕名称"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_15"
                    android:textColor="@color/_6E6E6E"
                    android:textSize="@dimen/sp_14" />
            </RelativeLayout>

            <View
                android:id="@+id/v_6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/_f2f2f2"
                app:layout_constraintTop_toBottomOf="@id/rl_7" />

            <RelativeLayout
                android:id="@+id/rl_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/v_6">

                <TextView
                    android:id="@+id/tv_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="请选择抓捕时间"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_zpsj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"

                    android:layout_toLeftOf="@id/iv_time"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请选择抓捕时间"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_15"
                    android:textColor="@color/_6E6E6E"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:id="@+id/iv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_10"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@mipmap/ic_you_jt" />
            </RelativeLayout>

            <View
                android:id="@+id/v_7"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/_f2f2f2"
                app:layout_constraintTop_toBottomOf="@id/rl_8" />

            <RelativeLayout
                android:id="@+id/rl_9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/v_7">

                <TextView
                    android:id="@+id/tv_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="案件性质"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_ajxz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"

                    android:layout_toLeftOf="@id/iv_aj_xz"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="请选择案件性质"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_15"
                    android:textColor="@color/_6E6E6E"
                    android:textSize="@dimen/sp_14" />

                <ImageView
                    android:id="@+id/iv_aj_xz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_10"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@mipmap/ic_you_jt" />
            </RelativeLayout>

            <View
                android:id="@+id/v_8"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/_F2F2F2"
                app:layout_constraintTop_toBottomOf="@id/rl_9" />

            <EditText
                android:id="@+id/et_zb_dz"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:background="@null"
                android:gravity="left"
                android:hint="请输入抓捕地址"
                android:padding="@dimen/dp_15"
                android:textColor="@color/_6E6E6E"
                app:layout_constraintTop_toBottomOf="@id/v_8" />

            <View
                android:id="@+id/v_9"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/_F2F2F2"
                app:layout_constraintTop_toBottomOf="@id/et_zb_dz" />

            <EditText
                android:id="@+id/et_bz"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150"
                android:background="@null"
                android:gravity="left"
                android:hint="备注"
                android:padding="@dimen/dp_15"
                android:textColor="@color/_6E6E6E"
                app:layout_constraintTop_toBottomOf="@id/v_9" />


            <com.qflbai.lib.ui.widget.image.ImageBox
                android:id="@+id/ib"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                app:layout_constraintTop_toBottomOf="@id/et_bz"
                app:zib_img_size_one_line="4"
                android:nestedScrollingEnabled="false"
                app:zib_max_line="4" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/tv_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:background="@color/colorAccent"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_12"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>