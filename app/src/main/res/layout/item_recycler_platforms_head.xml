<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <org.angmarch.views.NiceSpinnerPro
            android:id="@+id/nice_xz"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginRight="@dimen/dp_3"
            android:background="@color/white"
            app:arrowBgDrawable="?attr/selectableItemBackgroundBorderless"
            app:arrowDrawable="@mipmap/ic_xia_la"
            app:hint="案件性质选择"
            app:imagePadingBottom="@dimen/dp_10"
            app:imagePadingLeft="7dp"
            app:imagePadingRight="@dimen/sp_7"
            app:imagePadingTop="@dimen/dp_10"
            app:layout_constraintBottom_toBottomOf="@id/rl_1"
            app:layout_constraintEnd_toStartOf="@id/rl_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/rl_1"
            app:textPadingLeft="@dimen/dp_10"
            app:textSize="@dimen/sp_14"
            app:textTint="@color/_999999" />

        <RelativeLayout
            android:id="@+id/rl_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/nice_xz"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_toLeftOf="@id/iv_time"
                android:hint="创建时间"
                android:textColor="@color/_999999"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:id="@+id/iv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:paddingLeft="@dimen/dp_7"
                android:paddingTop="@dimen/dp_10"
                android:paddingRight="@dimen/dp_7"
                android:paddingBottom="@dimen/dp_10"
                android:src="@mipmap/ic_xia_la" />
        </RelativeLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:text="分类标签"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_17"
        app:justifyContent="space_around"
        app:flexWrap="wrap">

        <TextView
            android:id="@+id/tv_type_dx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_corners_stroke_white"
            android:clickable="true"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_5"
            android:text="对象人员"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/colorAccent"
         />

        <TextView
            android:id="@+id/tv_type_sd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_corners_stroke_white"
            android:clickable="true"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_5"
            android:text="涉毒人员"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/tv_type_ww"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_corners_stroke_white"
            android:clickable="true"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_5"
            android:text="维稳人员"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/colorAccent" />

        <TextView
            android:id="@+id/tv_type_xyr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_corners_stroke_white"
            android:clickable="true"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_5"
            android:text="嫌疑人"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/colorAccent" />


        <TextView
            android:id="@+id/tv_type_xt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/shape_corners_stroke_white"
            android:clickable="true"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_5"
            android:text="其他"
            android:textColor="@color/colorAccent" />


    </com.google.android.flexbox.FlexboxLayout>
</LinearLayout>